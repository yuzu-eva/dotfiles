conky.config = {

    xinerama_head = 2,    
    background = true,
    use_xft = true,
    font = '123:size=8',
    xftalpha = 0.1,
    update_interval = 1.0,
    total_run_times = 0,
    own_window = true,
    own_window_type = panel,
    own_window_transparent = false,
    own_window_class = 'Conky',
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    own_window_argb_visual = true,
    own_window_argb_value = 200,
    double_buffer = true,
    minimum_width = 200,
    maximum_width = 400,
    minimum_height = 845,
    draw_shades = false,
    draw_outline = false,
    draw_borders = false,
    draw_graph_borders = true,
    default_color = 'gray',
    default_shade_color = 'red',
    default_outline_color = 'white',
    alignment = 'top_right',

    gap_x = 0,
    gap_y = 0,

    stippled_borders = 3,
    border_inner_margin = 9,
    border_width = 5,

    uppercase = false,
    cpu_avg_samples = 2,
    net_avg_samples = 1,
    use_spacer = right,
    text_buffer_size = 256,

}


conky.text = [[

${font Arial:bold:size=10}${color #3b71a1}${color #3b71a1}0xCAFEBABE ${color #3b71a1} ${hr 2}
$font${color DimGray}$sysname $kernel $alignr $machine
Date $alignr${time %A, %B %e}
Time $alignr${time %H:%M:%S}
Uptime $alignr${uptime_short}

${font Arial:bold:size=10}${color #3b71a1}NETWORK ${color #3b71a1}${hr 2}
$font${color DimGray}IP-Address $alignr ${addr enp39s0}
$font${color DimGray}Up $alignr ${upspeed enp39s0}
${color DimGray}${upspeedgraph enp39s0 20,250 DimGray DimGray}
${color DimGray}Down $alignr ${downspeed enp39s0}
${color DimGray}${downspeedgraph enp39s0 20,250 DimGray DimGray}  
${color DimGray}Uploaded: $alignr ${totalup enp39s0} Downloaded: $alignr ${totaldown enp39s0}

${font Arial:bold:size=10}${color #3b71a1}PROCESSORS ${color #3b71a1}${hr 2}
$font${color DimGray}Core1 ${cpu cpu1}% ${cpubar cpu1}
Freq: ${freq 1}MHz
Core2 ${cpu cpu2}% ${cpubar cpu2}
Freq: ${freq 2}MHz
Core3 ${cpu cpu3}% ${cpubar cpu3}
Freq: ${freq 3}MHz
Core4 ${cpu cpu4}% ${cpubar cpu4}
Freq: ${freq 4}MHz

${font Arial:bold:size=10}${color #3b71a1}MEMORY ${color #3b71a1}${hr 2}
$font${color DimGray}MEM $alignc $mem / $memmax $alignr $memperc%
$membar
${font Arial:bold:size=10}${color #3b71a1}STORAGE ${color #3b71a1}${hr 2}
$font${color DimGray}SSD $alignc ${fs_used /home} / ${fs_size /home} $alignr ${fs_free_perc /home}%
${fs_bar /home}
$font${color DimGray}HDD $alignc ${fs_used /media/Becoming a Philosopher} / ${fs_size /media/Becoming a Philosopher} $alignr ${fs_free_perc /media/Becoming a Philosopher}%
${fs_bar /media/Becoming a Philosopher}
${color #3b71a1}Disk I/O: $color${diskio}
${color DimGray}Read:
${color DimGray}${diskiograph_read 20,250 DimGray DimGray 750}
${color DimGray}Write:
${color DimGray}${diskiograph_write 20,250 DimGray DimGray 750}
${color #3b71a1}Swap Usage:$color $swap${color DimGray}/${color}$swapmax - $swapperc% ${color DimGray}${swapbar}

${color #3b71a1}Entropy: ${color}${entropy_avail}${color DimGray}/${color}${entropy_poolsize} ${color DimGray}${entropy_bar}

${font Arial:bold:size=10}${color #3b71a1}TEMPERATURES ${color #3b71a1}${hr 2}
$font${color DimGray}${color DimGray}Temp 1$alignr${hwmon 0 temp 1}°C
${color DimGray}Temp 2$alignr${hwmon 1 temp 1}°C
${color DimGray}Temp 3$alignr${hwmon 2 temp 1}°C

${font Arial:bold:size=10}${color #3b71a1}PROCESSES ${color #3b71a1}${hr 2}
$font${color #3b71a1}Total: ${color}$alignr${processes}
${color DimGray}$font${top name 1}${alignr}${top cpu 1} %
$font${top name 2}${alignr}${top cpu 2} %
$font${top name 3}${alignr}${top cpu 3} %
$font${top name 4}${alignr}${top cpu 4} %
$font${top name 5}${alignr}${top cpu 5} %

]]
